<table class="ui table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Temperature</th>
      <th>Wind Speed</th>
      <th>Wind Direction</th>
      <th>Pressure</th>
    </tr>
    
    <div class="ui five inverted stackable cards">

        <div class="card">
            <div class="image"></div>
            <div class="extra">
                <h2 class="ui center aligned icon">
                <i class="large red marker icon"></i>
                <h3>{{station.title}}</h3>
            </div>
        </div>
        <div class="card">
            <div class="image"></div>
            <div class="extra">
                <h2 class="ui center aligned icon">
                <i class="large purple cloud icon"></i>
                <h3>{{latestReading.code}}</h3>
            </div>
        </div>
        <div class="card">
            <div class="image"></div>
            <div class="extra">
                <h2 class="ui center aligned icon">
                    <i class="large blue temperature high icon"></i>
                <h3>Temperature: </h3>
                  <br>
                  <h3>Min: {{minTemp.temperature}}C</h3>
                  <h3>Max: {{maxTemp.temperature}}C</h3>
            </div>
        </div>
        <div class="card">
            <div class="image"></div>
            <div class="extra">
                <h2 class="ui center aligned icon">
                    <i class="large yellow wind icon"></i>
                <h3> Wind: </h3>
                  <br>
                  <h3>Min: {{minWind.windSpeed}}</h3>
                  <h3>Max: {{maxWind.windSpeed}}</h3>
            </div>
        </div>
        <div class="card">
            <div class="image"></div>
            <div class="extra">
                <h2 class="ui center aligned icon">
                <i class="large green atom icon"></i>
                <h3> Pressure: </h3>
                  <br>
                  <h3>Min: {{minPressure.pressure}} hPa </h3>
                  <h3>Max: {{maxPressure.pressure}} hPa</h3>
            </div>
        </div>
    </div>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td>
          {{code}}
        </td>
        <td>
          {{temperature}}
        </td>
        <td>
        {{windSpeed}}
        </td>
        <td>
        {{windDirection}}
        </td>
        <td>
        {{pressure}}
        </td>
        <td>
          <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon button">
          <i class="icon trash"></i></a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>